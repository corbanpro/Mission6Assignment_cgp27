@{
    ViewData["Title"] = "Add Movie";
}

@model Movie;

<h2>
    Fill in Movie Info
</h2>

<form method="post">
    <div class="row">
        <div class="col-1">
            <label asp-for="CategoryId">Category:</label>
        </div>
        <div class="col">
            <select type="text" asp-for="CategoryId">
                <option>Select a Category:</option>
                @foreach (Category cat in ViewBag.Categories)
                {
                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                }
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="Title">Title: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="Title" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="Year">Year: </label>
        </div>
        <div class="col">
            <input type="number" asp-for="Year" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="Director">Director: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="Director" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="Rating">Rating: </label>
        </div>
        <div class="col">
            <select type="text" asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="Edited">Edited: </label>
        </div>
        <div class="col">
            <input type="checkbox" asp-for="Edited" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="LentTo">Lent To: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="LentTo" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label asp-for="Notes">Notes: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="Notes" />
        </div>
    </div>
    <br />
    <input type="submit" value="Save Movie" />
</form>

<div asp-validation-summary="All"></div>