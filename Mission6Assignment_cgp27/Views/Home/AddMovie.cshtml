@{
    ViewData["Title"] = "Add Movie";
}

@model Movie;

<h1>Add Movie</h1>

<form action="AddMovie" method="post">
    <div class="row">
        <div class="col-1">
            <label>Category:</label>
        </div>
        <div class="col">
            <input type="text" asp-for="Category" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Title: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="Title" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Year: </label>
        </div>
        <div class="col">
            <input type="number" asp-for="Year" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Director: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="Director" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Rating: </label>
        </div>
        <div class="col">
            <select type="text" asp-for="Rating" value="">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Edited: </label>
        </div>
        <div class="col">
            <input type="checkbox" asp-for="Edited" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Lent To: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="LentTo" value="" />
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            <label>Notes: </label>
        </div>
        <div class="col">
            <input type="text" asp-for="Notes" value="" />
        </div>
    </div>
</form>

<div asp-validation-summary="All"></div>
