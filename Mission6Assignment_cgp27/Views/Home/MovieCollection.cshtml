@{
    ViewData["Title"] = "Movie Collection";
}

@model List<Movie>;

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>Notes</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
            {
        <tr>
            <td>@movie.Category.CategoryName</td>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@movie.Edited</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td><a asp-controller="Home" asp-action="EditMovie" asp-route-MovieId="@movie.MovieId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="DeleteMovie" asp-route-MovieId="@movie.MovieId">Delete</a></td>
        </tr>
            } 
    </tbody>

</table>

<div asp-validation-summary="All"></div>
